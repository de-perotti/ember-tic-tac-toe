{{#if (eq this.state 'loading')}}
  Loading a new game...
{{/if}}

{{#if (eq this.state 'playing')}}
  <PlayerTurn>
    {{this.currentPlayer.id}}
  </PlayerTurn>

  <button type="button" {{on "click" (fn this.newGame null)}}>New Game</button>

  <Board>
    <ul>
      {{#each this.game.tiles as |tile index|}}
        <li>
          <Tile>{{add index 1}} {{tile.id}}</Tile>
        </li>
      {{/each}}
    </ul>
  </Board>
{{/if}}

